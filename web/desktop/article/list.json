{	
	"cname":"图文列表页(二级)",
	"data": {
		"categories":{
			"api":"/xpmsns/pages/category/search",
			"query":{
				"select":"category_id,name,highlight,link,slug",
				"order":"priority asc",
				"children":false,
				"isnav":1
			}
		},
		"site":{
			"api":"/xpmsns/pages/siteconf/get",
			"query":{
				"site_slug":"global",
				"select":"*"
			}
		},
		"navs":"{{categories.data}}",
		"r": {
			"api":"/xpmsns/pages/recommend/getContents",
			"query":{
				"slugs":"focus,latest,section_1"
			}
		},
		"s":{
			"api":"/xpmsns/pages/recommend/getContents",
			"query":{
				"api":"/xpmsns/pages/recommend/getContents",
				"slugs":"sidebar_section_1,sidebar_section_2,sidebar_section_3,sidebar_section_4"
			}
		},
		"sections":{
			"api":"/xpmsns/pages/recommend/search",
			"query":{
				"select":"title,slug",
				"slug":"section_1,section_2,section_3,section_4,section_5,section_6"
			}
		},
		"links":{
			"api":"/xpmsns/pages/links/search",
			"query":{
				"select":"name,link"
			}
		},
		"section":"{{r.section_1}}",
		"page":{
			"title":"首页",
			"logo":"{{site.site_logo}}"
		},
		"seo": {
			"title":"{{site.site_name}}",
			"keywords":"{{site.site_name}}",
			"description":"{{site.site_intro}}"
		},
		"active": {
			"nav": "{{__var.cid}}",
			"subnav": "{{__get.subcid}}"
		}
	},
	"entries":[
		{"method":"GET", "router":"/article/list/{cid:.+}.html", "ttl":0},
		{"method":"GET", "router":"/article/list/{cid:.+}", "ttl":0}
	],
	
	"alias": {
		"mobile":"/mobile/article/index",
		"wechat":"/mobile/article/index",
		"wxapp": "/article"
	}
}